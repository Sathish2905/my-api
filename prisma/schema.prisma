generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongo"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id
  username String
  password String
  role     Role
  CartItem CartItem[]
  Wishlist Wishlist[]
}

model Product {
  id            String   @id
  title         String
  description   String
  price         Float
  image         String
  categoryId    String
  subCategoryId String?
}

model Category {
  id           String       @id
  name         String
  subCategories SubCategory[]
}

model SubCategory {
  id         String @id
  name       String
  categoryId String
}

model CartItem {
  id        String  @id
  productId String
  quantity  Int
  userId    String
  User      User    @relation(fields: [userId], references: [id])
  Product   Product @relation(fields: [productId], references: [id])
}

model Wishlist {
  id        String  @id
  productId String
  userId    String
  User      User    @relation(fields: [userId], references: [id])
  Product   Product @relation(fields: [productId], references: [id])
}

enum Role {
  admin
  user
}

model Property {
  id           String       @id
  name         String
  description  String
  value        String
}
